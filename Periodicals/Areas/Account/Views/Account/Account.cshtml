@model Periodicals.Areas.Account.Models.AccountViewModel
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Account</h2>
<div>
    <div class="acc">
        @Html.LabelFor(m => m.Username)
        @Model.Username
        <br />
        @Html.LabelFor(m => m.Email)
        @Model.Email
    </div>
    <br />
    @if (!ViewBag.Blocked)
    {
        <div class="alert alert-info acc-credit">
            <h3>Your account: @Model.Credit</h3>
            @Html.ActionLink("Top up", "TopUp", "Account", new { area = "Account" }, new { @class = "btn btn-primary btn-lg", @role = "button" })
        </div>
    }
    else
    {
        <div class="alert alert-danger">You account is blocked and cann't subscribe on editions</div>
    }
    <br />
    @Html.LabelFor(m => m.Subscribes)

    @foreach (var m in Model.Subscribes)
    {
        <br />
        @Html.ActionLink(m.Name, "Edition", "Home", new { area = "", editionId = m.Id }, new { @class = "btn btn-link btn-lg", @role = "button" })
    }
    <br />
</div>
<br />