@using System.Activities.Expressions
@using Periodicals.Models
@model EditionModel
@{
    ViewBag.Title = "AddEdition";
}

<h2>AddEdition</h2>
<nav class="navbar navbar-default edit" role="navigation">

    @{

        var newEdition = new EditionModel();
    }
    @using (Html.BeginForm("AddEdition", "Home", FormMethod.Post))
    {
        <div>@Html.LabelFor(m => newEdition.Name, new { @class = "" })</div>
        <div>@Html.TextBoxFor(m => newEdition.Name, new { @class = "form-control" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.Name)</div>

        <div>@Html.LabelFor(m => newEdition.Description, new { @class = "" })</div>
        <div>@Html.TextAreaFor(m => newEdition.Description, new { @class = "form-control", @rows = "10", @cols = "45" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.Description)</div>

        <div>@Html.LabelFor(m => newEdition.Price, new { @class = "" })</div>
        <div>@Html.TextBoxFor(m => newEdition.Price, new { @class = "form-control" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.Price)</div>

        <div>@Html.LabelFor(m => newEdition.ISSN, new { @class = "" })</div>
        <div>@Html.TextBoxFor(m => newEdition.ISSN, new { @class = "form-control" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.ISSN)</div>

        <div>@Html.LabelFor(m => newEdition.Type, new { @class = "" })</div>
        <div>@Html.TextBoxFor(m => newEdition.Type, new { @class = "form-control" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.Type)</div>


        <div>@Html.LabelFor(m => newEdition.TopicName, new { @class = "" })</div>
        <div>@Html.TextBoxFor(m => newEdition.TopicName, new { @class = "form-control" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.TopicName)</div>


        <div>@Html.LabelFor(m => newEdition.DateNextPublication, new { @class = "" })</div>
        <div>@Html.TextBoxFor(m => newEdition.DateNextPublication, new { @class = "form-control" })</div>
        <div>@Html.ValidationMessageFor(m => newEdition.DateNextPublication)</div>


        <div>@Html.LabelFor(m => newEdition.Language, new { @class = "" })</div>
        <div>@Html.DropDownListFor(m => newEdition.Language, new SelectList(new List<string>(){"ru", "eng"}), new { @class = "form-control" })</div>
        @*<div>@Html.TextBoxFor(m => newEdition.Language, new { @class = "form-control" })</div>*@
        <div>@Html.ValidationMessageFor(m => newEdition.Language)</div>

        <div>@Html.LabelFor(m => newEdition.Periodicity, new { @class = "" })</div>

        <div>@Html.DropDownListFor(m => newEdition.Periodicity, new SelectList(new List<int>(){1, 7, 14, 30, 365}), new { @class = "form-control" })</div>
        @*<div>@Html.TextBoxFor(m => newEdition.Periodicity, new { @class = "form-control" })</div>*@
        <div>@Html.ValidationMessageFor(m => newEdition.Periodicity)</div>

        <br />
        <input type="submit" class="btn" value="Добавить" />
    }
</nav>
